<!doctype html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>App Email Config - Backend</title>
        <link rel="stylesheet" href="{{ asset('bundles/optimeemail/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/optimeemail/css/app.css') }}">
        {% block javascripts %}
            <script src="{{ asset('bundles/optimeemail/js/popper.min.js') }}"></script>
            <script src="{{ asset('bundles/optimeemail/js/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/optimeemail/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header class="navbar navbar-dark navbar-expand-md sticky-top bg-dark flex-md-nowrap p-0 py-2 shadow">
            <div class="container-fluid">
                <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">App Email Config - Backend</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    {% if app.user and is_granted('IS_AUTHENTICATED') %}
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link d-flex gap-1" aria-current="page" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="" viewBox="0 0 16 16">
                                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                    </svg>
                                    <span>
                                        {{ app.user }}
                                    </span>
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </header>
        {% block body_content %}
            <div class="container-fluid">
                <div class="row">
                    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                        <div class="position-sticky pt-3">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path('optime_emails_template_list') }}">
                                        <span data-feather="home"></span>
                                        Email Templates
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path('optime_emails_layout_list') }}">
                                        <span data-feather="home"></span>
                                        Email Layouts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path('optime_emails_config_list') }}">
                                        <span data-feather="home"></span>
                                        Email Configs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path('optime_emails_log_list') }}">
                                        <span data-feather="home"></span>
                                        Email Logs
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>

                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                        <section style="min-height: 500px">
                            {% block page_header_container %}
                                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-5 border-bottom">
                                    <h1 class="h2">{% block page_header %}{% endblock %}</h1>
                                    <div class="btn-toolbar mb-2 mb-md-0">
                                        {% block page_header_actions %}
                                        {% endblock page_header_actions %}
                                    </div>
                                </div>
                            {% endblock page_header_container %}

                            {{ include('@OptimeEmail/_flashes.html.twig') }}

                            {% block content %}
                            {% endblock %}
                        </section>
                        <footer style="min-height: 50px" class="border-top mt-4 p-4">
                            Footer.
                        </footer>
                    </main>
                </div>

            </div>
        {% endblock body_content %}

        {% block javascripts_bottom %}
            <script>
              var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
              var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
              })
            </script>
        {% endblock %}

    </body>
</html>